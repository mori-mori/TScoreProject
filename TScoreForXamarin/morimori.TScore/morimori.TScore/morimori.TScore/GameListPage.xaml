<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="morimori.TScore.GameListPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="gameListView" ItemTapped="gameListView_ItemTapped" ItemsSource="{Binding games}" RowHeight="150">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical">
                                <StackLayout Orientation="Horizontal" Margin="10, 0, 0, 0">
                                    <Label Text="{Binding Name}" TextColor="Black"  FontSize="20"/>
                                    <Label Text="{Binding Date}" HorizontalOptions="EndAndExpand" FontSize="14"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="vs" Margin="10, 0, 10, 0"/>
                                    <Label Text="{Binding RivalAName}" Margin="0, 0, 10, 0" />
                                    <Label Text="{Binding RivalBName}" />
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Margin="10, 0, 0, 0">
                                    <Label Text="{Binding MySetCount1}" />
                                    <Label Text="-" Margin="10, 0, 10, 0"/>
                                    <Label Text="{Binding RivalSetCount1}" />
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Margin="10, 0, 0, 0">
                                    <Label Text="{Binding MySetCount2}" />
                                    <Label Text="-" Margin="10, 0, 10, 0"/>
                                    <Label Text="{Binding RivalSetCount2}" />
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Margin="10, 0, 0, 0">
                                    <Label Text="{Binding MySetCount3}" />
                                    <Label Text="-" Margin="10, 0, 10, 0"/>
                                    <Label Text="{Binding RivalSetCount3}" />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>